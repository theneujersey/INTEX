
@{
    ViewBag.Title = "Create Work Order";
}

<h2>Add Samples</h2>
 
<div class="form-horizontal">
    <div class="form-group row">
        <label for="example-text-input" class="col-xs-2 control-label">Compound Name</label>
        <div class="col-xs-10">
            <input class="form-control" type="text" value="" id="example-text-input">
        </div>
    </div>
    <div class="form-group row">
        <label for="example-text-input" class="col-xs-2 control-label">Assay</label>
        <div class="col-md-10">
            @Html.DropDownList("Assay", new List<SelectListItem>
                            {
                              new SelectListItem{ Text = "", Value = "none" },
                              new SelectListItem{ Text = "Assay Option 1", Value = "1" },
                              new SelectListItem{ Text = "Assay Option 2", Value = "2" },
                              new SelectListItem{ Text = "Assay Option 3", Value = "3" },
                              new SelectListItem{ Text = "Assay Option 4", Value = "4" },
                              new SelectListItem{ Text = "Assay Option 5", Value = "5" }
                            }, new { @class = "height" })
        </div>
    </div>
    <div class="form-group row">
        <div class="col-md-2">
            @Html.ActionLink("Add Another Sample", "CreateWorkOrder2", null, new { @class="btn btn-primary"})
        </div>
        <div class="col-md-2">
            @Html.ActionLink("Finish", "CreateWorkOrder3", null, new { @class = "btn btn-primary" })
        </div>
    </div>
</div>

